<div class="top-row pl-4 navbar navbar-dark">
    <a class="navbar-brand" href="">The UnIT Grafton</a>
    @*<img class="navbar-brand" src="/Images/TheUnitLogo.jpg" height="100" />*@
    <button class="navbar-toggler" @onclick="ToggleNavMenu">
        <span class="navbar-toggler-icon"></span>
    </button>
</div>

<div class="@NavMenuCssClass" @onclick="ToggleNavMenu">
    <AuthorizeView>
        <Authorized>
            <ul class="nav flex-column">

                <li class="nav-item px-3">
                    <NavLink class="nav-link" href="" Match="NavLinkMatch.All">
                        <span class="oi oi-home" aria-hidden="true"></span> Home
                    </NavLink>
                </li>

                <li class="nav-item px-3">
                    <NavLink class="nav-link" href="members" Match="NavLinkMatch.All">
                        <span class="oi oi-person" aria-hidden="true"></span> Member
                    </NavLink>
                </li>

                <li class="nav-item px-3">
                    <NavLink class="nav-link" href="computers" Match="NavLinkMatch.All">
                        <span class="oi oi-monitor" aria-hidden="true"></span> Computers
                    </NavLink>
                </li>

                <li class="nav-item px-3">
                    <NavLink class="nav-link" href="parts" Match="NavLinkMatch.All">
                        <span class="oi oi-hard-drive" aria-hidden="true"></span> Parts
                    </NavLink>
                </li>
                <li class="nav-item px-3">
                    <NavLink class="nav-link" href="announcements/list" Match="NavLinkMatch.All">
                        <span class="oi oi-hard-drive" aria-hidden="true"></span> Announcements
                    </NavLink>
                </li>

                <UnitLearningMenuItem />
            </ul>
        </Authorized>
        <NotAuthorized>
            <ul class="nav flex-column">

                <li class="nav-item px-3">
                    <NavLink class="nav-link" href="" Match="NavLinkMatch.All">
                        <span class="oi oi-home" aria-hidden="true"></span> Home
                    </NavLink>
                </li>
                <UnitLearningMenuItem />
            </ul>
        </NotAuthorized>
    </AuthorizeView>
</div>



@code {
    private bool collapseNavMenu = true;

    private string NavMenuCssClass => collapseNavMenu ? "collapse" : null;

    private void ToggleNavMenu()
    {
        collapseNavMenu = !collapseNavMenu;
    }
}